extends blocks/layout

block content
    div(class="row")
        each note in notes
            div(class="col-md-3 mb-4")
                div(class="card")
                    div(class="card-body")
                        h4(class="card-title d-flex justify-content-between align-items-center") #{note.title} 
                            a(href="/notes/edit/" + note._id): i(class="fas fa-edit")
                        p #{note.description}
                        form(action="/notes/delete/" + note._id method="post")
                            input(type="hidden" name="id" value=note._id)
                            button(type="submit" class="btn btn-danger btn-block btn-sm") Delete
        else
            div(class="card mx-auto")
                div(class="card-body")
                    p(class="lead") There are not notes yet.
                    a(href="/notes/add" class="btn btn-success btn-block") Create one